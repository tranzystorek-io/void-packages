export ARRIVE_ASSETS_GEN_DIR="${XBPS_BUILDDIR}/${pkgname}-${version}"

post_install() {
	vlicense LICENSE
	vcompletion assets/completions/arv.bash bash arv
	vcompletion assets/completions/arv.fish fish arv
	vcompletion assets/completions/_arv zsh arv
}
