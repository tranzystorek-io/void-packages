post_install() {
	vlicense LICENSE-MIT
	vinstall extra/config.toml 644 etc/lemurs
	vinstall extra/lemurs.pam 644 etc/pam.d lemurs
	vinstall extra/xsetup.sh 755 etc/lemurs
	vinstall ${FILESDIR}/labwc 755 etc/lemurs/wayland
	vsv lemurs
}
